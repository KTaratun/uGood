<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.preference.PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:key="settings"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <android.support.v7.preference.PreferenceCategory
        android:title="Profile"

        >
        <android.support.v7.preference.EditTextPreference
            android:key="change_username"
            android:title="Change Username"
            android:dialogTitle="Change Username"
            app:allowDividerBelow="true"

            />
        <android.support.v7.preference.Preference
            android:key="change_profile_pic"
            android:title="Change Profile Picture"
            android:dialogTitle="Change Profile Pic"

            />

        <android.support.v7.preference.Preference
            android:key="sign_out"
            android:title="Sign Out"
            />


    </android.support.v7.preference.PreferenceCategory>




</android.support.v7.preference.PreferenceScreen>